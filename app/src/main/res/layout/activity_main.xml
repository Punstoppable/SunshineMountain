<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aebymoen.sunshinemountain.MainActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/skierimage"
        android:layout_alignParentTop="true"
        android:id="@+id/main-skier-pic"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main-skier-pic"
        android:text="Skiers and snowboarders"
        android:id="@+id/main-skier-button" />

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/natureimage"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/main-nature-pic"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main-nature-pic"
        android:text="Non-Skiers and Non-snowboarders"
        android:id="@+id/main-nature-button"/>


</RelativeLayout>
